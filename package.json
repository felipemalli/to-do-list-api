{
  "name": "to-do-list",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "compose:up": "docker-compose up -d --build",
    "compose:down": "docker-compose down --remove-orphans",
    "compose:up:recreate": "docker-compose up -d --build --force-recreate",
    "compose:down:recreate": "docker-compose down --remove-orphans -v",
    "compose:up:dev": "docker-compose -f docker-compose.dev.yml up -d --build",
    "compose:down:dev": "docker-compose -f docker-compose.dev.yml down --remove-orphans",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "start": "node dist/server.js",
    "prestart": "npm run db:reset",
    "dev": "ts-node-dev --respawn --ignore-watch node_modules src/server.ts",
    "build": "rimraf dist && tsc",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "author": "felipe-vahia-malliagros",
  "license": "ISC",
  "dependencies": {
    "@types/sequelize": "^4.28.13",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "sequelize": "^6.21.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.1",
    "mysql2": "^2.3.3",
    "nodemon": "^2.0.16",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.4.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
